doctype html
html
	head
		meta(charset='utf-8')
		link(rel="stylesheet", href="/sass/index.sass")
		title Benchmarks Dashboard

	

	body		
		.BenchmarksDashboard-suites
			each subject in suites
				.BenchmarksDashboard-suites-item
					.BenchmarksDashboard-suites-item-innerwrap
						.BenchmarksDashboard-suites-item-title
							span.BenchmarksDashboard-suites-item-title-name=subject.title
							span.BenchmarksDashboard-suites-item-title-version=' '+subject.version
						
						a.BenchmarksDashboard-suites-item-button(href='/suite/'+subject.suite)
							.BenchmarksDashboard-suites-item-button-text Open Benchmarks Suite

		
		.BenchmarksDashboard-divider
			.BenchmarksDashboard-divider-line
			.BenchmarksDashboard-divider-text Results
		
		.BenchmarksDashboard-charts
			.BenchmarksDashboard-charts-gap
		
		.BenchmarksDashboard-settingsBar
			.BenchmarksDashboard-settingsBar-innerwrap
				.BenchmarksDashboard-settingsBar-title Settings
				.BenchmarksDashboard-settingsBar-list#settingsBar



		script window.config = !{JSON.stringify(config)};
		script window.dashboardOptions = !{JSON.stringify({title:options.title, subtitle:options.subtitle})};
		script window.targetSuites = !{JSON.stringify(suites)};
